# function : creat_link
creat_link() {

	if [ ! -L $2 ]; then
		ln -sf $1 $2
	fi
}

# function : send_req
send_req() {

	sed "s/Host: localhost/Host: $1/" $2 | $NC -w $3 127.0.0.1 80 >>out/web_server.out
	if [ $? -ne 0 ]; then
		exit 1
	fi
}

