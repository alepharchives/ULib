#!/bin/bash

DIR_MAIL=../../mail

print_page() {

   OUTPUT=`cat $FORM_FILE_DIR/$BASE_NAME.tmpl 2>/dev/null`

   if [ $# -ne 0 ]; then
      OUTPUT=`printf "$OUTPUT" "$@" 2>/dev/null`
   fi
}

send_mail() {

	# load specific script env, for signing and sending message to workflow...

	. $HOME_DIR/etc/${BASE_NAME}.conf

	# directory to put mail to send...

	cd $DIR_MAIL

	DIR_SESSION=$BASE_NAME

	mkdir -p $DIR_SESSION

	NAME=$DIR_SESSION/send_to_$$.eml

	printf "`cat $BASE_NAME.tmpl`" "$WORKFLOW_SUBJECT" "$WORKFLOW_FROM_ADDRESS" "$WORKFLOW_TO_ADDRESS" "$1" "$2" > $NAME

	./sendmsg.sh $NAME >/dev/null 2>&1 &

	sleep 2

	# goto main menu...

	echo -e "Location: /RA\r\n\r"

	exit 0
}
