/var/log/LOG-firenze /var/log/LOG-firenze.info /var/log/wifi-portal /var/log/uclient-firenze.log /var/log/userver-firenze.log {
    weekly
    compress
    dateext
    maxage 365
    copytruncate
    olddir /var/log/wifi-portal-firenze-logs-archives
    sharedscripts
    postrotate
        kill -HUP `cat /var/run/userver-firenze_ssl.pid`
        /etc/init.d/syslog reload
    endscript
}
